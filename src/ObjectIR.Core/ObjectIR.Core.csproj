<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>ObjectIR.Core</PackageId>
    <Version>0.1.0</Version>
    <Authors>ObjectIR Contributors</Authors>
    <Description>Object-oriented intermediate representation library inspired by LLVM IR</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Bson" Version="2.25.0" />
    <PackageReference Include="JsonSchema.Net" Version="7.0.3" />
  </ItemGroup>

</Project>
